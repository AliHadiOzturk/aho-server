{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6",
         "es7",
         "es2015",
         "es2016",
         "es2017",
         "es2018",
         "esnext"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "outDir": "dist",
      "sourceMap": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
   },
   "include": [
      "ormconfig.json",
      ".env"
   ]
}